                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Usuários
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Usuários", "Index", "Usuario")</li>
                                <li>@Html.ActionLink("Criar Usuário", "Create", "Usuario")</li>
                            </ul>
                        </li>
                    }
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Castração<span class="caret"></span> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Consultar Castrações", "Index", "FichaCastracao")</li>
                            <li>@Html.ActionLink("Agendar Castração", "Create", "FichaCastracao")</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Animais <span class="caret"></span> </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Meus Animais", "Index", "Animal")</li>
                            <li>@Html.ActionLink("Animais para doação", "AnimaisDoacoes", "Animal")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Endereço", "Edit", "Endereco")</li>
                    @*<li>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gráficos   <span class="caret"></span> </a>
